# Docker-spezifische .env Template
# Kopiere diese Datei zu .env und fülle die Werte aus

# ============================================================================
# DOMAIN & SECURITY
# ============================================================================
DOMAIN=rechnungen.example.com
SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARS

# ============================================================================
# DATABASE
# ============================================================================
DB_NAME=rechnungen
DB_USER=rechnungen_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================================================
# CLOUDFLARE (für Let's Encrypt DNS Challenge)
# ============================================================================
CF_API_EMAIL=your-email@example.com
CF_API_KEY=your_cloudflare_api_key

# ============================================================================
# COMPANY DATA
# ============================================================================
COMPANY_NAME=Ihre Firma GmbH
COMPANY_HOLDER=Max Mustermann
COMPANY_STREET=Musterstraße 123
COMPANY_ZIP=12345
COMPANY_CITY=Musterstadt
COMPANY_COUNTRY=Deutschland
COMPANY_EMAIL=info@ihre-firma.de
COMPANY_PHONE=+49 123 456789
COMPANY_TAX_ID=DE123456789
COMPANY_WEBSITE=https://ihre-firma.de

# ============================================================================
# BANK
# ============================================================================
BANK_NAME=Ihre Bank
BANK_IBAN=DE00 0000 0000 0000 0000 00
BANK_BIC=BANKDEFF

# ============================================================================
# MAIL (SMTP)
# ============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=true
MAIL_USE_SSL=false

# ============================================================================
# IMAP (Email-Empfang)
# ============================================================================
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your-email@gmail.com
IMAP_PASSWORD=your-app-password
IMAP_USE_SSL=true

# ============================================================================
# TAX & INVOICING
# ============================================================================
DEFAULT_TAX_RATE=19.00
LANDWIRTSCHAFTLICHE_URPRODUKTION_TAX_RATE=10.70

# ============================================================================
# 2FA
# ============================================================================
TOTP_ISSUER_NAME=Rechnungsverwaltung

# ============================================================================
# SESSION (Redis)
# ============================================================================
SESSION_TYPE=redis
SESSION_REDIS=redis://redis:6379/0
