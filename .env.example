# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
# PostgreSQL (empfohlen):
DATABASE_URL=postgresql://username:password@localhost:5432/rechnungen
# MySQL/MariaDB:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/rechnungen
# SQLite (für Tests):
# DATABASE_URL=sqlite:///rechnungen.db

# Email Configuration (für Mail-Schnittstelle)
MAIL_SERVER=imap.example.com
MAIL_PORT=993
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_USE_SSL=True

# Application Settings
UPLOAD_FOLDER=uploads
PDF_FOLDER=pdfs

# Ihre Firmendaten (für Rechnungen/PDFs)
COMPANY_NAME=Ihre Firma GmbH
COMPANY_HOLDER=Max Mustermann
COMPANY_STREET=Musterstraße 123
COMPANY_ZIP=12345
COMPANY_CITY=Musterstadt
COMPANY_COUNTRY=Deutschland
COMPANY_EMAIL=info@ihre-firma.de
COMPANY_PHONE=+49 123 456789
COMPANY_TAX_ID=DE123456789
COMPANY_WEBSITE=www.ihre-firma.de

# Steuersatz (Standard MwSt. für neue Rechnungen in %)
# Beispiele: 19.00 (Normalsatz), 7.00 (ermäßigt), 10.70 (Landwirtschaft)
DEFAULT_TAX_RATE=19.00

# Steuersatz für Landwirtschaftliche Urproduktion (§24 UStG Durchschnittssatz)
# Wird bei "Landwirtschaftliche Urproduktion" verwendet - Brutto = Netto, MwSt. aus Endsumme berechnet
LANDWIRTSCHAFTLICHE_URPRODUKTION_TAX_RATE=7.80

# Bankverbindung (für Rechnungen)
BANK_NAME=Ihre Bank
BANK_IBAN=DE00 0000 0000 0000 0000 00
BANK_BIC=BANKDEFF
